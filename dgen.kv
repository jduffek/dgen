# dgen.kv

# Import necessary Kivy modules
#:import Label kivy.uix.label
#:import BoxLayout kivy.uix.boxlayout
#:import Button kivy.uix.button

# Define the layout for the random number generator
BoxLayout:
    orientation: 'vertical'
    padding: 20
    size_hint: None, None
    size: self.minimum_size  # Adjusts the size of the window to match its content
    
    # Center the children both horizontally and vertically
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    
    # Label to display the random number
    Label:
        id: random_number_label
        text: '000'
        font_name: 'RobotoMono-Regular.ttf'  # Or any other digital-style font
        font_size: '60sp'
        size_hint: None, None
        size: self.texture_size  # Adjusts the size of the label to match its content
        color: 0/255, 255/255, 0/255, 1  # Bright green color
        halign: 'center'  # Center the text horizontally

    # Button to generate a new random number
    Button:
        text: 'dgen'
        size_hint_y: None
        height: '15dp'  # Adjust the height of the button
        on_release: app.generate_random_number()
